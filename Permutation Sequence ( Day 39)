class Solution {
    public String getPermutation(int n, int k) {
        StringBuilder sb = new StringBuilder();

        ArrayList<Integer> list = new ArrayList<>();
        int fact = 1;
        for(int i=1;i<=n;i++){
            fact *= i;
            list.add(i);
        }
        k--;

        for(int i=0;i<n;i++){
            fact /= (n-i);
            int index = (k/fact);
            sb.append(list.remove(index));
            k %= fact;
        }

        return sb.toString();
    }
}
